/* pages/search/search.wxss */

.searching {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

.search-for {
  display: flex;
  flex-direction: row;
  margin: 30rpx 0;
}

.search_arr {
  border: 1px solid #1f99b0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.sousuo {
  font-size: 28rpx;
  background-color: #1f99b0;
  color: #f7fbfc;
  margin-left: 15rpx;
  width: 15%;
  height: 65rpx;
  text-align: center;
  border-radius: 10rpx;
}

.courses{
  display: flex;
  flex-direction: column;
  margin:50rpx 20rpx 20rpx 20rpx;
}

.pic {
  height: 320rpx;
  text-align: center;
}

.photo {
  width: 710rpx;
  height: 100%;
}

.body {
  font-size: 22rpx;
  color: #97999A;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
