page {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

.navigation {
  border: 1rpx solid #4996ad;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.navigation text {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
  letter-spacing: 10rpx;
}

.on {
  background-color: #4996ad;
  color: #e8f2f4;
}

.swiper-box {
  margin: 40rpx;
}

.section {
  margin: 42rpx 0;
}

.two {
  background-color: #ededed;
  margin: 10rpx 0;
}

.section1 {
  display: flex;
  flex-direction: row;
}

.section-item {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.logining {
  width: 120rpx;
  height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #4996ad;
  color: #e8f2f4;
  position: absolute;
  bottom: 0;
  left: 40%;
}

radio{
  margin: 10rpx 20rpx 0 10rpx ;
